
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div id="ListaKategoriZawartosc">
    @Html.Action("CategoriesMenu")
    <div id="KategorieListPrawaSekcja">
        <div id="Breadcrumb">
            <img src="../Content/Images/dommaly.png" />
            <a href="link">
                @Html.MvcSiteMap().SiteMapPath()
            </a>
        </div>

        <form id="search-from">
            <input id="search-filter" type="search" name="searchQuery"
                   data-autocomplete-source="@Url.Action("CoursesTips")"
                   placeholder="Wprowadź teskt, by filtrować..." />
            <input type="submit" value="" />
        </form>

        <div id="SekcjaListaKategori">
            @Html.Partial("_CoursesList")
        </div>

    </div>
</div>

@section Scripts{
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")


    <script>
        $(function () {
            var setupAutoComplete = function () {
                var $input = $(this);
                var options = {
                    source: $input.attr("data-autocomplete-source"),
                    select: function (event, ui) {
                        $input = $(this);
                        $input.val(ui.item.label);
                        var $form = $input.parents("form:first");
                        $form.submit();
                    }
                };
                $input.autocomplete(options);
            };
            $("#search-filter").each(setupAutoComplete);
        });
    </script>

}